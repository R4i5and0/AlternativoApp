<?xml version="1.0" encoding="utf-8"?>
<!--
Este ficheiro define o aspeto do menu suspenso (dropdown)
para que ele combine com o tema escuro da aplicação.
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Cor de fundo sólida para a lista -->
    <solid android:color="#333333" /> <!-- Um cinzento bem escuro -->

    <!-- Borda para dar um acabamento -->
    <stroke
        android:width="1dp"
        android:color="#888888" /> <!-- Uma borda cinzenta clara -->

</shape>
